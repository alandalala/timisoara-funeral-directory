// Normalize Romanian diacritics for search (ƒÉ‚Üía, √¢‚Üía, √Æ‚Üíi, »ô‚Üís, »õ‚Üít)
function normalizeRomanian(text: string): string {
  return text
    .toLowerCase()
    .normalize('NFD')
    .replace(/[\u0300-\u036f]/g, '') // Remove diacritical marks
    .replace(/ƒÉ/g, 'a')
    .replace(/√¢/g, 'a')
    .replace(/√Æ/g, 'i')
    .replace(/»ô/g, 's')
    .replace(/≈ü/g, 's') // Alternative »ô
    .replace(/»õ/g, 't')
    .replace(/≈£/g, 't'); // Alternative »õ
}

